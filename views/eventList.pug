extends ./layouts/main

block content
    .page-header
        btn-toolbar.pull-right
            .btn-group
                a.btn.btn-lg.btn-primary(href='/event/create' type='button') Skapa
        h2 Listar alla events

    .row
        .col-md-12
            table#listEvent.table
                thad
                    tr
                        th Namn
                        th Startar
                        th Slutar
                        th Deltagare
                        th Status
                        th 
                tbody
                    each event in events
                        tr
                            td
                                a(href='/event/' + event.id) #{event.name}
                            td #{event.startAt}
                            td #{event.endAt}
                            td #{event.attendeesCount}/#{event.total}
                            td
                                span(class='label label-' + event.status.lable)=event.status.text
                            td
                                button.btn.btn-sm.btn-danger(type='button')
                                    span.glyphicon.glyphicon-trash(aria-hidden='true')